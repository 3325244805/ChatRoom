<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.chatsys.mapper.AdminMapper">

    <select id="findByAdminName" parameterType="String" resultType="com.example.chatsys.entity.Admin">
        SELECT * FROM admins WHERE admin_name = #{adminName}
    </select>


    <select id="findById" parameterType="Long" resultType="com.example.chatsys.entity.Admin">
        SELECT * FROM admins WHERE id = #{id}
    </select>



    <select id="findByEmail" parameterType="String" resultType="com.example.chatsys.entity.Admin">
        SELECT * FROM admins WHERE email = #{email}
    </select>


    <select id="selectByEmail" parameterType="String" resultType="com.example.chatsys.dto.SearchResult">
        SELECT id, admin_name as username, email, 2 as type
        FROM admins
        WHERE email = #{email} AND status = 1
    </select>
</mapper>